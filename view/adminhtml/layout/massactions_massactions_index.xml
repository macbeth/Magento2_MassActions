<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="page.title">
        <action method="setPageTitle">
            <argument name="title" xsi:type="string">Mass Actions</argument>
        </action>
    </referenceBlock>
    
    <body>
        <referenceContainer name="content">
            <block class="Magento\Backend\Block\Template" 
            template="Piantanida_MassActions::massactions.phtml" />            
            
            <block class="Piantanida\MassActions\Block\Form" 
                   name="piantanida.massactions.layout.form"
                   template="Piantanida_MassActions::form.phtml" />    
        </referenceContainer>
    </body>
</page>
